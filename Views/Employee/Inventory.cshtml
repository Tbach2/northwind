@using Northwind.Models
@model IEnumerable<Category>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">
            <div class="form-row">
                <div class="form-group col-md-8 mb-0">
                    <div class="form-group">
                        <div class="form-check form-check-inline text-right">
                            <input class="form-check-input" type="checkbox" id="in-stock" checked>
                            <label class="form-check-label" for="in-stock">In Stock</label>
                        </div>
                        <div class="form-check form-check-inline text-right">
                            <input class="form-check-input" type="checkbox" id="low-stock" checked>
                            <label class="form-check-label" for="low-stock">Low Stock</label>
                        </div>
                        <div class="form-check form-check-inline text-right">
                            <input class="form-check-input" type="checkbox" id="zero-stock" checked>
                            <label class="form-check-label" for="zero-stock">Out of Stock</label>
                        </div>
                    </div>
                </div>
            </div>


        </th>
        <th scope="col" class="text-right">Price</th>
        <th scope="col" class="text-right">Stock</th>
    </tr>
    </thead>
    <tbody id="product_rows"></tbody>
</table>